    image: zengxs/gitlab:17.5.0-ce.0
    environment:
      GITLAB_OMNIBUS_CONFIG: |
        external_url "http://gitlab.local"
        gitlab_rails['geo_enabled'] = true
      GITLAB_ROOT_EMAIL: "admin@gitlab.local"
      GITLAB_ROOT_PASSWORD: "GYQ_kpe5qrk*pgr6zjf"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - gitlab-config:/etc/gitlab
